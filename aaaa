-- Setup
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Hide Core Roblox UI including Backpack
local StarterGui = game:GetService("StarterGui")
StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, false)
StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.Backpack, false) -- Hide backpack/tools

-- Hide all user GUIs in PlayerGui except FakeLoadingUI
for _, gui in pairs(playerGui:GetChildren()) do
	if gui:IsA("ScreenGui") and gui.Name ~= "FakeLoadingUI" then
		gui.Enabled = false
	end
end

-- Create Fullscreen GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FakeLoadingUI"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Full black background
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.Position = UDim2.new(0, 0, 0, 0)
bg.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
bg.BorderSizePixel = 0
bg.Parent = screenGui

-- Loading bar container
local container = Instance.new("Frame")
container.Size = UDim2.new(0.5, 0, 0.1, 0)
container.Position = UDim2.new(0.25, 0, 0.5, 0)
container.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
container.BorderSizePixel = 0
container.Parent = bg

-- Progress bar background
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.95, 0, 0.4, 0)
barBG.Position = UDim2.new(0.025, 0, 0.5, 0)
barBG.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
barBG.BorderSizePixel = 0
barBG.Parent = container

-- Actual progress bar
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
bar.BorderSizePixel = 0
bar.Parent = barBG

-- Percentage text
local percentLabel = Instance.new("TextLabel")
percentLabel.Size = UDim2.new(1, 0, 0.4, 0)
percentLabel.Position = UDim2.new(0, 0, 0.05, 0)
percentLabel.BackgroundTransparency = 1
percentLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
percentLabel.Font = Enum.Font.SourceSansBold
percentLabel.TextScaled = true
percentLabel.Text = "0%"
percentLabel.Parent = container

-- Status text under the bar
local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(1, 0, 0.4, 0)
statusLabel.Position = UDim2.new(0, 0, 1.0, 0)
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
statusLabel.Font = Enum.Font.SourceSans
statusLabel.TextScaled = true
statusLabel.Text = "Initializing..."
statusLabel.Parent = container

-- Friendly fake status messages
local messages = {
	"Bypassing anti-cheat...",
	"Copying your pets...",
	"Checking if script is online...",
	"Analyzing backpack contents...",
	"Scanning server...",
	"Gathering session info...",
	"Confirming connection...",
	"Decrypting banana...",
	"Calculating trustworthiness...",
	"Loading memes..."
}

-- Animate loading over 2 minutes (2 sec per 1%)
local steps = 100
local timePerStep = 2
local progress = 0

while progress <= 100 do
	percentLabel.Text = progress .. "%"
	bar.Size = UDim2.new(progress / 100, 0, 1, 0)
	if progress % 10 == 0 then
		statusLabel.Text = messages[math.random(1, #messages)]
	end
	progress += 1
	wait(timePerStep)
end

-- End of loading, destroy UI
screenGui:Destroy()

-- Optionally restore GUIs or CoreGui here if needed
