local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local StarterGui = game:GetService("StarterGui")
StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, false)
StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.Backpack, false)

for _, gui in pairs(playerGui:GetChildren()) do
	if gui:IsA("ScreenGui") and gui.Name ~= "FakeLoadingUI" then
		gui.Enabled = false
	end
end

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FakeLoadingUI"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Background with gradient
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1,0,1,0)
bg.BackgroundColor3 = Color3.fromRGB(15,15,40)
bg.BorderSizePixel = 0
bg.Parent = screenGui

local bgGradient = Instance.new("UIGradient")
bgGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(10,10,30)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(20,20,60))
}
bgGradient.Rotation = 45
bgGradient.Parent = bg

-- Glow behind container
local glowBehind = Instance.new("Frame")
glowBehind.Size = UDim2.new(0.52, 0, 0.17, 0)
glowBehind.Position = UDim2.new(0.24, 0, 0.44, 0)
glowBehind.BackgroundColor3 = Color3.fromRGB(150, 50, 250)
glowBehind.BackgroundTransparency = 0.85
glowBehind.BorderSizePixel = 0
glowBehind.Parent = bg

local glowCorner = Instance.new("UICorner")
glowCorner.CornerRadius = UDim.new(0, 20)
glowCorner.Parent = glowBehind

local glowStroke = Instance.new("UIStroke")
glowStroke.Color = Color3.fromRGB(180, 100, 255)
glowStroke.Thickness = 6
glowStroke.Transparency = 0.9
glowStroke.Parent = glowBehind

-- Container with shadow and rounded corners
local container = Instance.new("Frame")
container.Size = UDim2.new(0.5, 0, 0.15, 0)
container.Position = UDim2.new(0.25, 0, 0.45, 0)
container.BackgroundColor3 = Color3.fromRGB(25, 25, 40)
container.BorderSizePixel = 0
container.Parent = bg

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 20)
corner.Parent = container

local shadow = Instance.new("UIStroke")
shadow.Color = Color3.fromRGB(70, 0, 100)
shadow.Thickness = 5
shadow.Transparency = 0.7
shadow.Parent = container

-- Progress bar background
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.9, 0, 0.35, 0)
barBG.Position = UDim2.new(0.05, 0, 0.55, 0)
barBG.BackgroundColor3 = Color3.fromRGB(40, 0, 60)
barBG.BorderSizePixel = 0
barBG.Parent = container

local barCorner = Instance.new("UICorner")
barCorner.CornerRadius = UDim.new(0, 15)
barCorner.Parent = barBG

-- Actual progress bar with neon gradient
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.fromRGB(0, 255, 255)
bar.BorderSizePixel = 0
bar.Parent = barBG

local barGradient = Instance.new("UIGradient")
barGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255, 0, 255)),
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0, 255, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 150, 255))
}
barGradient.Rotation = 90
barGradient.Parent = bar

local barFillCorner = Instance.new("UICorner")
barFillCorner.CornerRadius = UDim.new(0, 15)
barFillCorner.Parent = bar

-- Glow pulse effect on progress bar
local glow = Instance.new("UIStroke")
glow.Thickness = 7
glow.Color = Color3.fromRGB(255, 0, 255)
glow.Transparency = 0.5
glow.Parent = bar

-- Animated light sweep (overlay)
local sweep = Instance.new("Frame")
sweep.Size = UDim2.new(0.2, 0, 1.5, 0)
sweep.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
sweep.BackgroundTransparency = 0.7
sweep.Rotation = 45
sweep.Position = UDim2.new(-0.25, 0, -0.25, 0)
sweep.Parent = bar

local sweepGradient = Instance.new("UIGradient")
sweepGradient.Color = ColorSequence.new({
	ColorSequenceKeypoint.new(0, Color3.fromRGB(255,255,255)),
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(255,255,255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(255,255,255)),
})
sweepGradient.Transparency = NumberSequence.new({
	NumberSequenceKeypoint.new(0, 1),
	NumberSequenceKeypoint.new(0.5, 0),
	NumberSequenceKeypoint.new(1, 1),
})
sweepGradient.Parent = sweep

-- Percentage text - neon cyan with glow
local percentLabel = Instance.new("TextLabel")
percentLabel.Size = UDim2.new(1, 0, 0.4, 0)
percentLabel.Position = UDim2.new(0, 0, 0.1, 0)
percentLabel.BackgroundTransparency = 1
percentLabel.TextColor3 = Color3.fromRGB(0, 255, 255)
percentLabel.Font = Enum.Font.GothamBlack
percentLabel.TextScaled = true
percentLabel.Text = "0%"
percentLabel.Parent = container

local textGlow = Instance.new("UIStroke")
textGlow.Thickness = 2
textGlow.Color = Color3.fromRGB(0, 255, 255)
textGlow.Transparency = 0.5
textGlow.Parent = percentLabel

-- Status text - purple neon glow
local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(1, 0, 0.25, 0)
statusLabel.Position = UDim2.new(0, 0, 1, 0)
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(200, 100, 255)
statusLabel.Font = Enum.Font.GothamBold
statusLabel.TextScaled = true
statusLabel.Text = "Initializing..."
statusLabel.Parent = container

local statusGlow = Instance.new("UIStroke")
statusGlow.Thickness = 2
statusGlow.Color = Color3.fromRGB(200, 100, 255)
statusGlow.Transparency = 0.6
statusGlow.Parent = statusLabel

-- Credit text (dim purple)
local creditLabel = Instance.new("TextLabel")
creditLabel.Size = UDim2.new(1, 0, 0.08, 0)
creditLabel.Position = UDim2.new(0, 0, 0.92, 0)
creditLabel.BackgroundTransparency = 1
creditLabel.TextColor3 = Color3.fromRGB(130, 80, 190)
creditLabel.Font = Enum.Font.GothamItalic
creditLabel.TextScaled = true
creditLabel.Text = "script made by @_herman"
creditLabel.Parent = bg

local messages = {
	"Bypassing anti-cheat...",
	"Copying your pets...",
	"Checking if script is online...",
	"Analyzing backpack contents...",
	"Scanning server...",
	"Gathering session info...",
	"Confirming connection...",
	"Decrypting banana...",
	"Calculating trustworthiness...",
	"Loading memes..."
}

local RunService = game:GetService("RunService")

local progress = 0
local timePerStep = 2
local elapsedTime = 0

local connection
connection = RunService.Heartbeat:Connect(function(dt)
	-- Animate sweep moving
	local newX = sweep.Position.X.Scale + dt * 0.5 -- adjust speed here
	if newX > 1.3 then
		newX = -0.3
	end
	sweep.Position = UDim2.new(newX, 0, sweep.Position.Y.Scale, 0)

	-- Update loading progress every 'timePerStep' seconds
	elapsedTime += dt
	if elapsedTime >= timePerStep and progress <= 100 then
		progress += 1
		elapsedTime = 0

		bar.Size = UDim2.new(progress / 100, 0, 1, 0)
		percentLabel.Text = progress .. "%"

		glow.Transparency = 0.4 + 0.4 * math.sin(tick() * 6)

		if progress % 10 == 0 then
			statusLabel.Text = messages[math.random(1, #messages)]
		end

		if progress > 100 then
			connection:Disconnect()
			screenGui:Destroy()
		end
	end
end)
