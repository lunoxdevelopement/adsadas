-- Setup
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Hide Core Roblox UI including Backpack
local StarterGui = game:GetService("StarterGui")
StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, false)
StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.Backpack, false) -- Hide backpack/tools

-- Hide all user GUIs in PlayerGui except FakeLoadingUI
for _, gui in pairs(playerGui:GetChildren()) do
	if gui:IsA("ScreenGui") and gui.Name ~= "FakeLoadingUI" then
		gui.Enabled = false
	end
end

-- Create Fullscreen GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FakeLoadingUI"
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Parent = playerGui

-- Full black background
local bg = Instance.new("Frame")
bg.Size = UDim2.new(1, 0, 1, 0)
bg.Position = UDim2.new(0, 0, 0, 0)
bg.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
bg.BorderSizePixel = 0
bg.Parent = screenGui

-- Loading bar container (rounded corners)
local container = Instance.new("Frame")
container.Size = UDim2.new(0.5, 0, 0.12, 0)
container.Position = UDim2.new(0.25, 0, 0.5, 0)
container.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
container.BorderSizePixel = 0
container.Parent = bg

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = container

-- Progress bar background (rounded corners)
local barBG = Instance.new("Frame")
barBG.Size = UDim2.new(0.95, 0, 0.45, 0)
barBG.Position = UDim2.new(0.025, 0, 0.5, 0)
barBG.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
barBG.BorderSizePixel = 0
barBG.Parent = container

local barCorner = Instance.new("UICorner")
barCorner.CornerRadius = UDim.new(0, 10)
barCorner.Parent = barBG

-- Actual progress bar (rounded corners, gradient)
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 0, 1, 0)
bar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
bar.BorderSizePixel = 0
bar.Parent = barBG

local barGradient = Instance.new("UIGradient")
barGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 210, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 120, 255))
}
barGradient.Parent = bar

local barFillCorner = Instance.new("UICorner")
barFillCorner.CornerRadius = UDim.new(0, 10)
barFillCorner.Parent = bar

-- Percentage text
local percentLabel = Instance.new("TextLabel")
percentLabel.Size = UDim2.new(1, 0, 0.35, 0)
percentLabel.Position = UDim2.new(0, 0, 0.05, 0)
percentLabel.BackgroundTransparency = 1
percentLabel.TextColor3 = Color3.fromRGB(230, 230, 230)
percentLabel.Font = Enum.Font.GothamBold
percentLabel.TextScaled = true
percentLabel.Text = "0%"
percentLabel.Parent = container

-- Status text under the bar
local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(1, 0, 0.3, 0)
statusLabel.Position = UDim2.new(0, 0, 1.0, 0)
statusLabel.BackgroundTransparency = 1
statusLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
statusLabel.Font = Enum.Font.Gotham
statusLabel.TextScaled = true
statusLabel.Text = "Initializing..."
statusLabel.Parent = container

-- Credit text at bottom
local creditLabel = Instance.new("TextLabel")
creditLabel.Size = UDim2.new(1, 0, 0.08, 0)
creditLabel.Position = UDim2.new(0, 0, 0.92, 0)
creditLabel.BackgroundTransparency = 1
creditLabel.TextColor3 = Color3.fromRGB(100, 100, 100)
creditLabel.Font = Enum.Font.GothamItalic
creditLabel.TextScaled = true
creditLabel.Text = "script made by @_herman"
creditLabel.Parent = bg

-- Friendly fake status messages
local messages = {
	"Bypassing anti-cheat...",
	"Copying your pets...",
	"Checking if script is online...",
	"Analyzing backpack contents...",
	"Scanning server...",
	"Gathering session info...",
	"Confirming connection...",
	"Decrypting banana...",
	"Calculating trustworthiness...",
	"Loading memes..."
}

-- Animate loading over 2 minutes (2 sec per 1%)
local steps = 100
local timePerStep = 2
local progress = 0

while progress <= 100 do
	percentLabel.Text = progress .. "%"
	bar.Size = UDim2.new(progress / 100, 0, 1, 0)
	if progress % 10 == 0 then
		statusLabel.Text = messages[math.random(1, #messages)]
	end
	progress += 1
	wait(timePerStep)
end

-- End of loading, destroy UI
screenGui:Destroy()

-- Optionally restore GUIs or CoreGui here if needed
