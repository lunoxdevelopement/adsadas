local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "FakeLoadingScreen"
screenGui.Parent = playerGui

-- Create Frame (loading bar background)
local bgFrame = Instance.new("Frame")
bgFrame.Size = UDim2.new(0.5, 0, 0, 30)
bgFrame.Position = UDim2.new(0.25, 0, 0.5, 0)
bgFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
bgFrame.BorderSizePixel = 0
bgFrame.Parent = screenGui

-- Create LoadingBar (the actual bar that grows)
local loadingBar = Instance.new("Frame")
loadingBar.Size = UDim2.new(0, 0, 1, 0)
loadingBar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
loadingBar.BorderSizePixel = 0
loadingBar.Parent = bgFrame

-- Create Percentage Text
local percentageText = Instance.new("TextLabel")
percentageText.Size = UDim2.new(1, 0, 0, 30)
percentageText.Position = UDim2.new(0, 0, 0, -35)
percentageText.BackgroundTransparency = 1
percentageText.TextColor3 = Color3.new(1, 1, 1)
percentageText.Font = Enum.Font.SourceSansBold
percentageText.TextSize = 24
percentageText.Text = "0%"
percentageText.Parent = bgFrame

-- Create Loading Text (under the bar)
local loadingText = Instance.new("TextLabel")
loadingText.Size = UDim2.new(1, 0, 0, 30)
loadingText.Position = UDim2.new(0, 0, 1, 5)
loadingText.BackgroundTransparency = 1
loadingText.TextColor3 = Color3.new(1, 1, 1)
loadingText.Font = Enum.Font.SourceSansItalic
loadingText.TextSize = 18
loadingText.Text = ""
loadingText.Parent = bgFrame

-- Hide UI so player cannot see it
screenGui.Enabled = false  -- disables the whole GUI

-- Loading text options
local loadingMessages = {
    "Bypassing anti-cheat...",
    "Copying your pets...",
    "Loading game assets...",
    "Syncing with server...",
    "Decrypting files...",
}

-- Function to update loading screen (runs invisibly)
local function fakeLoading()
    for i = 0, 100 do
        loadingBar.Size = UDim2.new(i/100, 0, 1, 0)
        percentageText.Text = i.."%"
        loadingText.Text = loadingMessages[(i % #loadingMessages) + 1]
        wait(0.05)
    end
    -- Stays at 100%
end

-- Start fake loading
fakeLoading()
